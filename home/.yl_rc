# -- General --
echo "Loading yl_rc..."
ZSH_THEME="cloud"
export GPG_TTY=$(tty)
export GOPATH=$HOME/go

function dated_archive() {
    if [ $# -eq 0 ]; then
        echo "Usage: dated_archive <path>"
        return
    fi

    tar -cvf $1_$(date "+%y%M%d_%H%M").tar $1
}

# -- Docker Machine --
if docker-machine &> /dev/null ; then
    if [ $(docker-machine status) = "Running" ]; then
        echo "Setting up docker-machine environment variables..."
        eval $(docker-machine env)
    fi
fi

# -- Aliases --
# General
alias ll="ls -lh"
alias lla="ls -lha"
alias rc="exec zsh"
alias vimrc="vim ~/.zshrc"
alias vimyl="vim ~/.yl_rc"
alias ip="curl https://api.blupig.net/echo/ip"

# Mac
alias dds="find . -name '.DS_Store' -delete"

# Git
alias g="git"
alias ga="dds && git add . && git status"
alias gb="git branch"
