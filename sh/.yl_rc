# -- General --
echo "Loading yl_rc..."
ZSH_THEME="cloud"

# -- Docker Machine --
if docker-machine &> /dev/null ; then
    echo "Setting docker-machine environment variables..."
    eval $(docker-machine env)
fi

# -- Aliases --
# General
alias ll="ls -lh"
alias lla="ls -lha"
alias rc="source ~/.zshrc"
alias vimrc="vim ~/.zshrc"
alias vimyl="vim ~/.yl_rc"
alias s="ssh iad-a1b-s0.blupig.net"

# Mac
alias dds="find . -name '.DS_Store' -delete"

# Git
alias g="git"
alias ga="dds && git add . && git status"
alias gc="git checkout"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gcane="git commit --amend --no-edit"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git log"
alias gl1="git log --pretty --oneline"
alias gm="git merge --ff-only"
alias gp="git pull"
alias gr="git reset"
alias grh="git reset --hard"
alias grhh1="git reset --hard HEAD~1"
alias gs="dds && git status"
alias gss="git stash"
alias gsp="git stash pop"
alias grso="git remote show origin"
alias grpo="git remote prune origin"

# Docker
alias d="docker"
alias dp="docker pull"
alias dps="docker ps -a"
alias di="docker images"
alias de="docker exec -it"
alias drm="docker rm -v -f \$(docker ps -aq)"
alias drmi="docker rmi \$(docker images -q)"
alias dm="docker-machine"
alias dmup="docker-machine start"
alias dmdown="docker-machine stop"

# K8s
alias k="kubectl"
alias kd="kubectl describe"
alias kdn="kubectl describe nodes"
alias ke="kubectl exec -it"
alias kev="kubectl get events -w"
alias kg="kubectl get"
alias ki="kubectl get ingress"
alias kl="kubectl logs -f"
alias kn="kubectl get nodes"
alias ka="kubectl get nodes,deployments,hpa,pods,services,ingress"
alias kp="kubectl get pods"
alias kpx="kubectl proxy"
alias ks="kubectl get services"

